<?xml version="1.0" encoding="utf-8"?>

<!-- A background for the login activity. It contains concentric circles. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:right="0dp"
        android:bottom="20dp"
        android:left="0dp"
        android:top="-20dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f2463d" />
            <size android:height="100dp" android:width="100dp"/>
        </shape>
    </item>
    <item
        android:right="10dp"
        android:bottom="30dp"
        android:left="10dp"
        android:top="-10dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f24f44" />
            <size android:height="80dp" android:width="80dp"/>
        </shape>
    </item>
    <item
        android:right="25dp"
        android:bottom="45dp"
        android:left="25dp"
        android:top="5dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f25449" />
            <size android:height="50dp" android:width="50dp"/>
        </shape>
    </item>
</layer-list>